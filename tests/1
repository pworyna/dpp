import pytest

from script import is_palindrome


@pytest.mark.parametrize("example, expected", [
    ('kajak', True),
    ('Kobyła ma mały bok', True),
    ('python', False),
    ('', True),
    ('A', True)
])
def test_palindrome_detector_looping_(example, expected):
    result = is_palindrome(example)
    assert result == expected
